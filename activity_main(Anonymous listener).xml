<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.textandroid1.MainActivity">

    <TextView
        android:id="@+id/viev1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Các kiểu lập trình sự kiện"
        android:background="#247629"
        android:textSize="25dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viev1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout2">

        <EditText
            android:id="@+id/edtsob"
            android:layout_below="@+id/edtsoa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nhập số b"/>

        <EditText
            android:id="@+id/edtsoa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nhập số a"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/viev1"
        android:id="@+id/review"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toLeftOf="@+id/relativeLayout2"
        android:layout_toStartOf="@+id/relativeLayout2">

        <TextView
            android:layout_below="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Số b : "
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Số a : "
            android:gravity="center"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Tổng 2 số "/>

    <TextView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#247629"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
