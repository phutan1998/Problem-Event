<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.textandroid2.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#255a1e"
        android:text="Các kiếu lập trình sự kiện"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="nhập số a"
            android:id="@+id/edtsoa"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="nhập số b"
            android:id="@+id/edtsob"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/relativeLayout"
        android:layout_toStartOf="@+id/relativeLayout"
        android:id="@+id/relayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Số a: "
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/viewsoa"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Số b: "
            android:textSize="30dp"
            android:layout_below="@+id/viewsoa"
            android:gravity="center"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/viewkq"
        android:layout_below="@id/relayout"
        android:background="#255a1e"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewkq"
        android:text="Tổng 2 số"
        android:id="@+id/button1"/>
</RelativeLayout>